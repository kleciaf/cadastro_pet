<p id="notice"><%= notice %></p>

<h1>Pacientes</h1>

<table>
  <thead>
    <tr>
      <th>Foto</th>
      <th>Nome animal</th>
      <th>Nome dono</th>
      <th>Cpf cnpj dono</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.foto %></td>
        <td><%= paciente.nome_animal %></td>
        <td><%= paciente.nome_dono %></td>
        <td><%= paciente.cpf_cnpj_dono %></td>
        <td><%= link_to 'Show', paciente %></td>
        <td><%= link_to 'Edit', edit_paciente_path(paciente) %></td>
        <td><%= link_to 'Destroy', paciente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

